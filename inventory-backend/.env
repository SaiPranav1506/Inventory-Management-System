PORT=5000
MONGO_URI=mongodb://127.0.0.1:27017/inventory_db
# Primary (institutional) SMTP - recommended for delivering to .edu.in addresses
SMTP_HOST_PRIMARY=smtp.college.edu
SMTP_PORT_PRIMARY=587
SMTP_USER_PRIMARY=your_institution_smtp_user
SMTP_PASS_PRIMARY=your_institution_smtp_pass
SMTP_SECURE_PRIMARY=false

# Secondary (personal or external provider) SMTP - used if primary fails
SMTP_HOST_SECONDARY=smtp.sendgrid.net
SMTP_PORT_SECONDARY=587
SMTP_USER_SECONDARY=apikey
SMTP_PASS_SECONDARY=YOUR_SENDGRID_API_KEY
SMTP_SECURE_SECONDARY=false

# Optional legacy compatibility (used as primary if PRIMARY not set)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=YOUR_SENDGRID_API_KEY
# SMTP_SECURE=false

EMAIL_FROM="Inventory <no-reply@yourdomain.edu.in>"

# For local dev (OPTIONAL) to return code in API response. Set to false for real email flows:
DEV_SHOW_2FA_CODE=false